@model Clothing_shop_v2.VModels.RegisterVModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .form-container {
            transition: all 0.3s ease;
        }

        .input-field {
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .input-field:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            }

        .field-validation-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg form-container">
        <div class="p-6">
            <h2 class="text-2xl font-bold text-center mb-6">Đăng ký tài khoản</h2>
            <form asp-action="Register" asp-controller="Home" method="post">
                @Html.AntiForgeryToken()
                <!-- Họ tên -->
                <div class="mb-4">
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="FullName" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>
                <!-- Tên đăng nhập -->
                <div class="mb-4">
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Username" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>
                <!-- Ngày sinh -->
                <div class="mb-4">
                    <label asp-for="BirthDate" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="BirthDate" type="date" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" />
                    <span asp-validation-for="BirthDate" class="field-validation-error"></span>
                </div>
                <!-- Giới tính -->
                <div class="mb-4">
                    <label asp-for="Gender" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="Gender" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required>
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="field-validation-error"></span>
                </div>
                <!-- Số điện thoại -->
                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="PhoneNumber" type="tel" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                </div>
                <!-- Email -->
                <div class="mb-4">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Email" type="email" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
                <!-- Địa chỉ -->
                <div class="mb-4">
                    <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Address" type="text" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="Address" class="field-validation-error"></span>
                </div>
                <!-- Mật khẩu -->
                <div class="mb-4">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Password" type="password" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
                <!-- Xác nhận mật khẩu -->
                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="ConfirmPassword" type="password" class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none" required />
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>
                <!-- Nút Đăng ký -->
                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200">Đăng ký</button>
            </form>
            <p class="mt-4 text-center text-sm text-gray-600">
                Đã có tài khoản? <a asp-controller="Home" asp-action="Login" class="text-blue-600 hover:underline" data-ajax="true">Đăng nhập ngay</a>
            </p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+0DPw7OQGQgO2g2IW1dx+I7O7RwS+bZq1+jMpsAvV3lT0pFP6nH6WHEud3zL/wg3HLYr2VSGU5cVNar9m6LGg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>